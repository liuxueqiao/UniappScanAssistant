page {
  /* Colors */
  --primary-color: #1abc9c;
  --primary-hover: #16a085;
  --primary-light: rgba(26, 188, 156, 0.1);
  
  --secondary-color: #ff9f00;
  --secondary-light: rgba(255, 159, 0, 0.1);
  
  --danger-color: #fa5151;
  --danger-light: rgba(250, 81, 81, 0.1);
  
  --text-main: #333333;
  --text-secondary: #888888;
  --text-placeholder: #cccccc;
  
  --bg-color: #f7f8fa;
  --bg-card: #ffffff;
  --border-color: #eeeeee;

  /* Spacing */
  --spacing-xs: 8rpx;
  --spacing-sm: 16rpx;
  --spacing-md: 24rpx;
  --spacing-lg: 32rpx;
  --spacing-xl: 40rpx;

  /* Global Reset */
  background-color: var(--bg-color);
  font-family: -apple-system, BlinkMacSystemFont, "Helvetica Neue", Helvetica,
    Segoe UI, Arial, Roboto, "PingFang SC", "miui", "Hiragino Sans GB",
    "Microsoft Yahei", sans-serif;
  color: var(--text-main);
  font-size: 28rpx;
  line-height: 1.5;
  box-sizing: border-box;
}

view, text, image, navigator {
  box-sizing: border-box;
}

.container {
  box-sizing: border-box;
  width: 100%;
}

/* --- Card Style --- */
.card {
  background: var(--bg-card);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

.card-title {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--text-main);
  margin-bottom: 24rpx;
  display: block;
  position: relative;
}

/* --- Typography --- */
.text-h1 { font-size: 40rpx; font-weight: 700; }
.text-h2 { font-size: 34rpx; font-weight: 600; }
.text-h3 { font-size: 30rpx; font-weight: 500; }
.text-body { font-size: 28rpx; }
.text-desc { font-size: 26rpx; color: var(--text-secondary); }
.text-xs { font-size: 22rpx; color: var(--text-secondary); }

.text-bold { font-weight: 600; }
.text-center { text-align: center; }
.text-right { text-align: right; }

.text-primary { color: var(--primary-color); }
.text-danger { color: var(--danger-color); }
.text-warning { color: var(--secondary-color); }

/* --- Buttons --- */
.btn {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  padding: 0 40rpx;
  background-color: var(--primary-color);
  color: #fff;
  transition: all 0.3s;
}

.btn:active {
  background-color: var(--primary-hover);
  transform: scale(0.98);
}

.btn-outline {
  background-color: transparent;
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
}
.btn-outline:active {
  background-color: var(--primary-light);
}

.btn-secondary {
  background-color: #f5f5f5;
  color: var(--text-main);
}
.btn-secondary:active {
  background-color: #e0e0e0;
}

.btn-block {
  width: 100%;
  margin-top: 32rpx;
}

.btn-sm {
  height: 64rpx;
  font-size: 26rpx;
  border-radius: 32rpx;
  padding: 0 24rpx;
}

/* --- Flex Utilities --- */
.flex-row { display: flex; flex-direction: row; align-items: center; }
.flex-col { display: flex; flex-direction: column; }
.flex-center { display: flex; align-items: center; justify-content: center; }
.flex-between { display: flex; align-items: center; justify-content: space-between; }
.flex-1 { flex: 1; }
.gap-xs { gap: 8rpx; }
.gap-sm { gap: 16rpx; }
.gap-md { gap: 24rpx; }

/* --- Badges --- */
.badge {
  display: inline-flex;
  align-items: center;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  line-height: 1.2;
}
.badge-primary { background: var(--primary-light); color: var(--primary-color); }
.badge-danger { background: var(--danger-light); color: var(--danger-color); }
.badge-warning { background: var(--secondary-light); color: var(--secondary-color); }

/* --- Avatar --- */
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
}
.avatar-sm { width: 64rpx; height: 64rpx; }
.avatar-lg { width: 120rpx; height: 120rpx; }

/* --- List Item --- */
.list-item {
  display: flex;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}
.list-item:last-child { border-bottom: none; }
.list-content { flex: 1; margin: 0 24rpx; }
.list-arrow { 
  width: 16rpx; 
  height: 16rpx; 
  border-top: 4rpx solid #ccc;
  border-right: 4rpx solid #ccc;
  transform: rotate(45deg);
}
