/* challenge.wxss */
page {
  background-color: var(--bg-color);
  min-height: 100vh;
}

.container {
  padding-bottom: 60rpx;
}

/* 顶部挑战卡片 */
.header-bg {
  height: 320rpx;
  background: linear-gradient(
    135deg,
    var(--primary-color),
    var(--primary-hover)
  );
  border-radius: 0 0 40rpx 40rpx;
  position: relative;
  z-index: 0;
}

.challenge-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 48rpx 40rpx;
  margin: -240rpx 32rpx 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  position: relative;
  z-index: 1;
}

.challenge-title {
  font-size: 44rpx;
  font-weight: 700;
  color: var(--text-main);
  margin-bottom: 24rpx;
  text-align: center;
}

.challenge-period {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 48rpx;
  font-size: 26rpx;
  color: var(--text-secondary);
  background: #f5f7fa;
  padding: 12rpx 32rpx;
  border-radius: 32rpx;
  align-self: center;
  width: fit-content;
  margin-left: auto;
  margin-right: auto;
}

.period-label {
  margin-right: 12rpx;
  font-weight: 600;
  color: var(--text-main);
}

.stats-grid {
  display: flex;
  justify-content: space-around;
  margin-bottom: 48rpx;
  position: relative;
  padding: 0 16rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--primary-color);
  line-height: 1.2;
}

.stat-unit {
  font-size: 24rpx;
  font-weight: 400;
  margin-left: 4rpx;
  color: var(--text-secondary);
}

.stat-label {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-top: 8rpx;
}

.btn-join {
  background: var(--primary-color);
  color: #fff;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  height: 96rpx;
  line-height: 96rpx;
  box-shadow: 0 8rpx 20rpx rgba(7, 193, 96, 0.3);
  border: none;
  transition: opacity 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.btn-join:active {
  opacity: 0.9;
}

.btn-join.joined {
  background: #f5f5f5;
  color: var(--text-secondary);
  box-shadow: none;
}

.btn-hover {
  opacity: 0.9;
  transform: scale(0.98);
}

/* 排行榜区域 */
.rank-section {
  padding: 0 32rpx;
  margin-top: 40rpx;
  position: relative;
  z-index: 1;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 24rpx;
  padding: 0 16rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 700;
  color: var(--text-main);
  position: relative;
  padding-left: 24rpx;
  line-height: 1;
}

.section-title::before {
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: var(--primary-color);
  border-radius: 4rpx;
}

.section-subtitle {
  font-size: 26rpx;
  color: var(--text-secondary);
  font-weight: 500;
}

.rank-list {
  background: #fff;
  border-radius: 24rpx;
  padding: 0;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  overflow: hidden;
}

.rank-item {
  display: flex;
  align-items: center;
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid #f5f5f5;
  transition: background-color 0.2s;
}

.rank-item:active {
  background-color: #f9f9f9;
}

.rank-item:last-child {
  border-bottom: none;
}

.rank-num {
  width: 60rpx;
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-secondary);
  text-align: center;
  margin-right: 24rpx;
}

.rank-num.first {
  color: #ffb800;
  font-size: 40rpx;
}

.rank-num.second {
  color: #9e9e9e;
  font-size: 36rpx;
}

.rank-num.third {
  color: #cd7f32;
  font-size: 36rpx;
}

.user-info {
  flex: 1;
  display: flex;
  align-items: center;
  overflow: hidden;
}

.avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 44rpx;
  background: #f0f0f0;
  border: 2rpx solid #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  flex-shrink: 0;
}

.user-detail {
  margin-left: 24rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.username {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-main);
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.user-meta {
  font-size: 22rpx;
  color: var(--text-secondary);
  display: flex;
  align-items: center;
}

.arrow {
  margin: 0 8rpx;
  color: #ccc;
}

.rank-stats {
  text-align: right;
  min-width: 160rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.loss-rate {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--primary-color);
  margin-bottom: 4rpx;
}

.loss-rate.positive {
  color: var(--primary-color);
}

.loss-rate.negative {
  color: #f56c6c;
}

.loss-value {
  font-size: 22rpx;
  color: var(--text-secondary);
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 40rpx;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 30rpx;
  color: var(--text-main);
  margin-bottom: 12rpx;
  font-weight: 600;
}

.empty-subtext {
  font-size: 26rpx;
  color: var(--text-secondary);
}
