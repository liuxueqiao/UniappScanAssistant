.article {
  height: 260rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: #f7f7f7;
  position: relative;
}

.cover {
  width: 100%;
  height: 260rpx;
}

.articleTitle {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 16rpx;
  background: rgba(0, 0, 0, 0.45);
  color: #fff;
  font-size: 30rpx;
}

