/* index.wxss */
.container {
  padding: 0;
  padding-bottom: 40rpx;
}

/* Header Stats */
.header-section {
  background: linear-gradient(
    135deg,
    var(--primary-color),
    var(--primary-hover)
  );
  padding: 40rpx 32rpx 80rpx;
  color: #fff;
  border-radius: 0 0 40rpx 40rpx;
  position: relative;
  z-index: 0;
}

.greeting {
  margin-bottom: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.user-info {
  display: flex;
  flex-direction: column;
}

.text-greeting {
  font-size: 44rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}
.text-subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.stats-card {
  background: #fff;
  margin: -60rpx 32rpx 40rpx;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  display: flex;
  justify-content: space-between;
  position: relative;
  z-index: 1;
}

.stat-item {
  flex: 1;
  text-align: center;
  position: relative;
}

.stat-item:first-child::after {
  content: "";
  position: absolute;
  right: 0;
  top: 15%;
  height: 70%;
  width: 1px;
  background-color: #f0f0f0;
}

.stat-num {
  font-size: 48rpx;
  font-weight: 800;
  color: var(--text-main);
  line-height: 1.2;
  font-family: "DIN Alternate", sans-serif; /* Try to use number font */
}

.stat-num.text-primary {
  color: var(--primary-color);
}
.stat-num.text-danger {
  color: var(--danger-color);
}

.stat-label {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-top: 8rpx;
}

/* Quick Actions Grid */
.grid-menu {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  padding: 0 32rpx;
  margin-bottom: 40rpx;
}

.menu-item {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.02);
  transition: all 0.2s;
  position: relative;
  overflow: hidden;
}

.menu-item:active {
  transform: scale(0.98);
  background-color: #fafafa;
}

.icon-box {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  font-size: 40rpx;
}

.bg-primary {
  background: rgba(7, 193, 96, 0.1);
  color: var(--primary-color);
}
.bg-blue {
  background: rgba(58, 123, 255, 0.1);
  color: #3a7bff;
}
.bg-orange {
  background: rgba(255, 159, 0, 0.1);
  color: #ff9f00;
}
.bg-purple {
  background: rgba(114, 46, 209, 0.1);
  color: #722ed1;
}

.menu-label {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-main);
}
.menu-desc {
  font-size: 22rpx;
  color: var(--text-secondary);
  margin-top: 4rpx;
}

/* Main Action Highlight */
.menu-item.main-action {
  grid-column: span 2;
  flex-direction: row;
  justify-content: flex-start;
  padding: 32rpx 40rpx;
  background: linear-gradient(to right, #ffffff, #fcfcfc);
}

.menu-item.main-action .icon-box {
  margin-bottom: 0;
  margin-right: 24rpx;
  width: 100rpx;
  height: 100rpx;
  font-size: 48rpx;
}

.menu-item.main-action .menu-content {
  text-align: left;
}
.menu-item.main-action .menu-label {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

/* Section Title */
.section-title {
  font-size: 34rpx;
  font-weight: 700;
  color: var(--text-main);
  padding: 0 32rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}
.section-title::before {
  content: "";
  display: block;
  width: 8rpx;
  height: 32rpx;
  background: var(--primary-color);
  border-radius: 4rpx;
  margin-right: 16rpx;
}

/* Swiper Card */
.swiper-wrapper {
  padding: 0 32rpx;
}

.swiper-card {
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 40rpx;
}

.article-item {
  width: 100%;
  height: 100%;
  position: relative;
}

.article-cover {
  width: 100%;
  height: 100%;
  background: #eee;
}

.article-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 60rpx 24rpx 24rpx;
  background: linear-gradient(to bottom, transparent, rgba(0, 0, 0, 0.7));
}

.article-title {
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  line-height: 1.4;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

/* Login Prompt */
.login-prompt {
  margin: 0 32rpx 40rpx;
  text-align: center;
  padding: 48rpx;
}
