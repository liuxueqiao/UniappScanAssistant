/* team.wxss */
page {
  background-color: var(--bg-color);
  min-height: 100vh;
}

.container {
  padding-bottom: 60rpx;
}

/* Team Header */
.team-header {
  text-align: center;
  padding: 60rpx 40rpx;
  background: linear-gradient(135deg, var(--primary-color), var(--primary-hover));
  color: #fff;
  border-radius: 0 0 40rpx 40rpx;
  margin-bottom: 40rpx;
  position: relative;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.2);
}

.team-name {
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 32rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.team-code {
  display: inline-flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 16rpx 32rpx;
  border-radius: 40rpx;
  margin-bottom: 48rpx;
  backdrop-filter: blur(10px);
}

.code-label {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-right: 16rpx;
}

.code-val {
  font-size: 36rpx;
  font-weight: 700;
  color: #fff;
  letter-spacing: 2rpx;
  margin-right: 16rpx;
}

.copy-icon {
  font-size: 28rpx;
  opacity: 0.8;
}

.share-btn {
  width: 70% !important;
  border-radius: 48rpx;
  font-size: 30rpx;
  font-weight: 600;
  background: #fff !important;
  color: var(--primary-color) !important;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
}

/* Member List */
.section-title {
  padding: 0 32rpx;
  margin-bottom: 24rpx;
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-main);
  border-left: 8rpx solid var(--primary-color);
  padding-left: 16rpx;
  line-height: 1;
}

.member-list {
  margin: 0 32rpx 40rpx;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.member-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
  transition: background-color 0.2s;
}

.member-item:last-child {
  border-bottom: none;
}

.member-item:active {
  background-color: #f9f9f9;
}

.member-left {
  display: flex;
  align-items: center;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  background-color: #eee;
  margin-right: 24rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.member-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.member-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-main);
  margin-bottom: 8rpx;
}

.checkin-status {
  font-size: 22rpx;
  color: var(--text-secondary);
  background-color: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  align-self: flex-start;
  display: inline-flex;
  align-items: center;
}

.checkin-status.active {
  color: var(--primary-color);
  background-color: rgba(7, 193, 96, 0.1);
}

.member-right {
  text-align: right;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.delta-val {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 4rpx;
}

.text-success {
  color: var(--primary-color);
}
.text-danger {
  color: #f56c6c;
}
.text-muted {
  color: var(--text-secondary);
}

.text-xs {
  font-size: 22rpx;
  color: var(--text-secondary);
}

/* No Team State */
.no-team-header {
  padding: 80rpx 40rpx 60rpx;
  text-align: center;
}

.text-xl {
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 24rpx;
  color: var(--text-main);
}

.text-secondary {
  color: var(--text-secondary);
  font-size: 28rpx;
}

.form-card {
  margin: 0 32rpx 40rpx;
  padding: 48rpx 40rpx;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 32rpx;
  color: var(--text-main);
}

.input-group {
  display: flex;
  gap: 24rpx;
}

.input {
  flex: 1;
  height: 88rpx;
  background-color: #f5f7fa;
  border-radius: 16rpx;
  padding: 0 32rpx;
  font-size: 30rpx;
  transition: background-color 0.2s;
}

.input:focus {
  background-color: #fff;
  border: 2rpx solid var(--primary-color);
}

.btn-sm {
  width: 180rpx !important;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  font-weight: 600;
  margin: 0;
  border-radius: 16rpx;
  background: var(--primary-color);
  color: #fff;
}

.footer-actions {
  padding: 40rpx 32rpx 80rpx;
}

.btn-danger-outline {
  background: #fff;
  color: #f56c6c;
  border: 2rpx solid #f56c6c;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 48rpx;
  height: 88rpx;
  line-height: 84rpx;
}

.btn-danger-outline:active {
  background: #fef0f0;
}
