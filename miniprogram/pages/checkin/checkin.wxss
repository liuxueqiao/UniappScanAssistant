/* checkin.wxss */
page {
  background-color: var(--bg-color);
  min-height: 100vh;
}

.container {
  padding-bottom: 60rpx;
  position: relative;
  z-index: 1;
}

/* Header Date */
.date-header {
  padding: 60rpx 40rpx 80rpx;
  text-align: center;
  background: linear-gradient(135deg, var(--primary-color), var(--primary-hover));
  color: #fff;
  border-radius: 0 0 40rpx 40rpx;
  margin-bottom: -60rpx; /* Overlap effect */
  position: relative;
  z-index: 0;
}

.text-secondary-light {
  color: rgba(255, 255, 255, 0.9);
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.text-xl {
  font-size: 56rpx;
  font-weight: 700;
  line-height: 1.2;
}

/* Input Card */
.input-card {
  margin: 0 32rpx 40rpx;
  padding: 60rpx 40rpx;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 1;
}

.input-label {
  font-size: 30rpx;
  color: var(--text-secondary);
  margin-bottom: 40rpx;
}

.input-wrapper {
  display: flex;
  align-items: baseline;
  justify-content: center;
  margin-bottom: 48rpx;
  position: relative;
  width: 100%;
}

.weight-input {
  font-size: 80rpx;
  font-weight: 700;
  height: 100rpx;
  width: 240rpx;
  text-align: center;
  color: var(--text-main);
  border-bottom: 4rpx solid #eee;
  caret-color: var(--primary-color);
  transition: border-color 0.3s;
}

.weight-input:focus {
  border-bottom-color: var(--primary-color);
}

.unit {
  font-size: 32rpx;
  color: var(--text-secondary);
  margin-left: 16rpx;
  position: absolute;
  right: 50%;
  margin-right: -140rpx; /* Adjust based on input width */
  bottom: 24rpx;
}

.streak-badge {
  background-color: #fff7ed;
  color: #f97316;
  font-size: 26rpx;
  font-weight: 600;
  padding: 12rpx 32rpx;
  border-radius: 32rpx;
  margin-bottom: 48rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.btn-block {
  width: 100% !important;
  font-size: 34rpx;
  font-weight: 600;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 48rpx;
  background: linear-gradient(135deg, var(--primary-color), var(--primary-hover));
  color: #fff;
  box-shadow: 0 8rpx 20rpx rgba(7, 193, 96, 0.3);
  transition: opacity 0.3s;
}

.btn-block:active {
  opacity: 0.9;
}

/* History Section */
.history-section {
  padding: 0 32rpx 60rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-main);
  margin-bottom: 24rpx;
  padding-left: 16rpx;
  border-left: 8rpx solid var(--primary-color);
  line-height: 1;
}

.history-list {
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.03);
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid #f5f5f5;
  transition: background-color 0.2s;
}

.history-item:active {
  background-color: #f9f9f9;
}

.history-item:last-child {
  border-bottom: none;
}

.item-date {
  font-size: 28rpx;
  color: var(--text-secondary);
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.item-val {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-main);
}

.item-unit {
  font-size: 24rpx;
  font-weight: 400;
  color: var(--text-secondary);
  margin-left: 4rpx;
}

.empty-state {
  padding: 80rpx 40rpx;
  text-align: center;
  color: var(--text-secondary);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}
