<view class="container login-container">
  <!-- Background Decoration -->
  <view class="bg-decoration"></view>

  <view class="logo-box">
    <view class="logo">
      <image class="logo-icon" src="/images/logo.png" mode="aspectFill"></image>
    </view>
    <view class="app-name">瘦搭子</view>
    <view class="app-slogan">你的瘦身搭子，正在等你打卡</view>
  </view>

  <view class="card login-card">
    <view class="text-h2 text-center" style="margin-bottom: 16rpx;">欢迎回来</view>
    <view class="text-desc text-center" style="margin-bottom: 56rpx;">
      登录后加入小队，与朋友一起变瘦
    </view>
    
    <button class="btn btn-block" loading="{{loading}}" bindtap="doLogin">
      微信一键登录
    </button>
  </view>

  <!-- Dev Login -->
  <view class="dev-box" wx:if="{{isDevtools}}">
    <view class="divider">开发调试</view>
    <view class="card">
      <view class="text-h3" style="margin-bottom:24rpx;">模拟登录</view>
      <input class="input-field" placeholder="输入 Admin Key" value="{{adminKey}}" bindinput="onInputAdminKey" />
      <button class="btn btn-secondary btn-block" loading="{{devLoading}}" bindtap="doDevLogin">
        开发登录
      </button>
    </view>
  </view>
</view>
