.container {
  min-height: 100vh;
  background-color: var(--bg-color, #f7f8fa);
  padding-bottom: calc(env(safe-area-inset-bottom) + 40rpx);
}

.article-cover {
  width: 100%;
  height: 480rpx;
  background-color: #e0e0e0;
  position: relative;
  display: block;
}

.article-cover::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 160rpx;
  background: linear-gradient(to bottom, transparent, rgba(0,0,0,0.2));
}

.article-content {
  position: relative;
  margin-top: -60rpx;
  background: #fff;
  border-radius: 40rpx 40rpx 0 0;
  padding: 48rpx 32rpx;
  min-height: 600rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.03);
  z-index: 1;
}

.article-header {
  margin-bottom: 40rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.article-title {
  font-size: 44rpx;
  font-weight: 700;
  color: var(--text-main, #333);
  line-height: 1.4;
  margin-bottom: 24rpx;
  letter-spacing: 1rpx;
}

.article-meta {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  font-size: 26rpx;
  color: var(--text-secondary, #888);
}

.article-meta text {
  margin-right: 24rpx;
  display: flex;
  align-items: center;
}

.article-author {
  color: var(--primary-color, #07c160);
  font-weight: 500;
  background: rgba(7, 193, 96, 0.1);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.rich-text-wrapper {
  font-size: 32rpx;
  color: #333;
  line-height: 1.8;
  text-align: justify;
}

/* 优化富文本中的图片显示 */
.rich-text-wrapper image {
  max-width: 100% !important;
  height: auto !important;
  border-radius: 16rpx;
  margin: 24rpx 0;
  display: block;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 底部操作栏 */
.article-actions {
  margin-top: 60rpx;
  padding-top: 40rpx;
  border-top: 1rpx solid #f5f5f5;
  display: flex;
  justify-content: center;
}

.action-btn {
  background: #f7f8fa;
  color: #666;
  font-size: 28rpx;
  padding: 0 48rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  border: none;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.3s ease;
}

.action-btn::after {
  border: none;
}

.action-btn:active {
  background: #eee;
  transform: scale(0.98);
}

.share-btn {
  background: rgba(7, 193, 96, 0.1);
  color: var(--primary-color, #07c160);
}

/* Loading State */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 30vh;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 6rpx solid #f0f0f0;
  border-top-color: var(--primary-color, #07c160);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: var(--text-secondary, #888);
}

/* Empty State */
.empty-state {
  padding-top: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-text {
  font-size: 30rpx;
  color: var(--text-secondary, #999);
  margin-bottom: 40rpx;
}

.btn-back {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: var(--primary-color, #07c160);
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  margin: 0 auto;
}
.btn-back:active {
  opacity: 0.9;
}
